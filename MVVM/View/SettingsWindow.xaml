<Window x:Class="BookMarket.MVVM.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMarket" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpfanimated="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
         TextElement.FontWeight="Regular"
         TextElement.FontSize="13"
         TextOptions.TextFormattingMode="Ideal"
         TextOptions.TextRenderingMode="Auto"
         Background="{x:Null}"
         FontFamily="{DynamicResource MaterialDesignFont}"
       Title="MainWindow" Height="560" Width="400" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>

    </Window.Resources>
    <Border CornerRadius="30" Background="#FF282828" BorderBrush="Gray" BorderThickness="0.3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Grid Name ="ToolBar" Background="Transparent" Grid.Row="0" MouseLeftButtonDown="Drag">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="150">
                    <Image Name="MinButton" Height="32" Width="32" Margin="55,0,10,0" MouseDown="MinButton_MouseDown">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="../../Source/свернуть_неактив.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=MinButton}" Value="True">
                                        <Setter Property="Source" Value="../../Source/свернуть_актив.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image Name="CloseButton" Height="32" Width="32" Margin="0,0,0,0" MouseDown="CloseButton_MouseDown">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="../../Source/крест_неактив.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=CloseButton}" Value="True">
                                        <Setter Property="Source" Value="../../Source/крест_актив.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </Grid>
            
            <Grid Name ="Title" Grid.Row="1">
               
            </Grid>

            <Grid Name ="Data1" Grid.Row="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="400">
                    <Button Name="Minus1" Height="50" Width="50" 
                        Style="{DynamicResource RoundButton}"
                        HorizontalAlignment="Left"
                        Margin="70,0,0,0"
                        Background="Red"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="-" FontSize="40">
                    </Button>
                    <Button Name="Plus1" Height="50" Width="50" 
                        Style="{DynamicResource RoundButton}"
                        HorizontalAlignment="Left"
                        Margin="160,0,0,0"
                        Background="Green"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="+" FontSize="30">
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Name ="Data2" Grid.Row="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="400">
                    <Button Name="Minus2" Height="50" Width="50" 
                        Style="{DynamicResource RoundButton}"
                        HorizontalAlignment="Left"
                        Margin="70,0,0,0"
                        Background="Red"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="-" FontSize="40">
                    </Button>
                    <Button Name="Plus2" Height="50" Width="50" 
                        Style="{DynamicResource RoundButton}"
                        HorizontalAlignment="Left"
                        Margin="160,0,0,0"
                        Background="Green"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="+" FontSize="30">
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Name ="Data3" Grid.Row="4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="400">
                    <Button Name="Minus3" Height="50" Width="50" 
                        Style="{DynamicResource RoundButton}"
                        HorizontalAlignment="Left"
                        Margin="70,0,0,0"
                        Background="Red"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="-" FontSize="40">
                    </Button>
                    <Button Name="Plus3" Height="50" Width="50" 
                        Style="{DynamicResource RoundButton}"
                        HorizontalAlignment="Left"
                        Margin="160,0,0,0"
                        Background="Green"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="+" FontSize="30">
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Window>