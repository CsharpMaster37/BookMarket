<Page x:Class="BookMarket.MVVM.View.InformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookMarket.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="555" d:DesignWidth="500"
      Title="InformationPage" Background="{x:Null}">

    <Border CornerRadius="0,0,30,0" Background="Yellow">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="555"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border BorderBrush="Gray" BorderThickness="1"/>
            </Grid>
        </Grid>
    </Border>
</Page>
