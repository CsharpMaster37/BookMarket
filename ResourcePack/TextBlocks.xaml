<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="TextBlock" x:Key="ForSettings">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Gray"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ForTitle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="FontFamily" Value="Cascadia Mono ExtraLight"/>
    </Style>

    <LinearGradientBrush x:Key="GradietnTitle">
        <GradientStop Color="#f670c1" Offset="0.8"/>
        <GradientStop Color="#32defd" Offset="0.3"/>
    </LinearGradientBrush>

    <DropShadowEffect x:Key="SomeShadow" ShadowDepth="3" Direction="270" Color="Black" Opacity="70" BlurRadius="2"/>
    
</ResourceDictionary>